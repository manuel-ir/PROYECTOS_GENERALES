<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="unidadBiblioteca">
        
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>com.hibernate_ej1.entidades.Libro</class>
        <class>com.hibernate_ej1.entidades.Usuario</class>
        <class>com.hibernate_ej1.entidades.Prestamo</class>
        <class>com.hibernate_ej1.entidades.NombreCompleto</class>
        <class>com.hibernate_ej1.entidades.PrestamoId</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/unidadBiblioteca?createDatabaseIfNotExist=true" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="1234" />
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>
</persistence>